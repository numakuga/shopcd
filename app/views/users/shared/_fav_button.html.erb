<% if user_signed_in? %>
   <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
  <% if item.favorited_by?(current_user) %>
    <span>お気に入り解除：</span>
    <%= link_to item.favorites.count, item_favorites_path(item), method: :delete, remote: true %>
  <% else %>
    <span>お気に入り登録：</span>
    <%= link_to item.favorites.count, item_favorites_path(item), method: :post, remote: true %>
  <% end %>
<% else %>
  <span>お気に入り数：</span><%= item.favorites.count %>
<% end %>
