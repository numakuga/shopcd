<div class="card mb-5">
  <div class="card-header">
    <%= current_user.first_name + current_user.last_name %>（<%= current_user.first_kana + current_user.last_kana %>）様
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <span class="font-weight-bold col-md-2">郵便番号：</span><%= current_user.postal_code %>
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold col-md-2">住所：</span><%= current_user.address %>
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold col-md-2">電話番号：</span><%= current_user.phone %>
    </li>
    <li class="list-group-item">
      <span class="font-weight-bold col-md-2">メールアドレス：</span><%= current_user.email %>
    </li>
  </ul>
</div>
