<% cart_items.each do |cart_item| %>
  <div class="card bl-blue mt-4">
    <div class="card-body d-flex justify-content-between">
      <div class="col-md-3">
        <div class="card">
          <%= link_to item_path(cart_item.item) do %>
            <%= image_tag "logo", size: "250x250" %>
          <% end %>
        </div>
      </div>
      <div class="align-self-center">
        <%= link_to item_path(cart_item.item) do %>
          <h3 class="card-title"><%= cart_item.item.title %></h3>
        <% end %>
        <p class="card-text"><%= cart_item.item.artist.name %></p>
      </div>
      <!-- selectで個数変更できるようにしたい -->
      <%= form_with model:[current_user, cart_item], local: true, id: "piece_form", class:"align-self-center" do |f| %>
        <p class="card-text align-self-center">
          <%= f.select :piece, options_for_select(cart_item.item.stock_array, selected: cart_item.piece) %>
          <%= f.submit "個数変更", class: "btn btn-link" %>
        </p>
      <% end %>
      <!-- メソッドモデルに移動したい -->
      <p class="card-text align-self-center"><%= cart_item.tax_included %>円(税込)</p>
      <p class="card-text align-self-center">在庫数：<%= cart_item.item.stock %>点</p>
      <!-- 購入情報入力画面時にも削除できるようにする？ -->
      <%= link_to "削除", user_cart_item_path(current_user, cart_item), method: :delete, class:"btn btn-secondary align-self-center" %>
    </div>
  </div>
<% end %>

<div class="card mt-4">
  <div class="card-body d-flex justify-content-end">
    <h5 class="card-text mr-5">計<%= cart_items.pluck(:piece).sum %>点</h5>
    <!-- メソッドモデルに移動したい -->
    <h4 class="card-text">合計金額<%= cart_items.map{|cart_item| (cart_item.item.price * 1.10 * cart_item.piece).round}.sum.to_s(:delimited) %>円(税込)</h4>
  </div>
</div>
