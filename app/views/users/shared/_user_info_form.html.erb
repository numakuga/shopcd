<div class="form-group row">
  <%= f.label :お名前, class: "col-md-2 col-form-label" %>
  <%= f.label :（姓）, class: "col-form-label mr-3" %>
  <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-md-2 form-control" %>
  <%= f.label :（名）, class: "col-form-label ml-3" %>
  <%= f.text_field :last_name, autocomplete: "last_name", class: "col-md-2 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :お名前（カナ）, class: "col-md-2 col-form-label" %>
  <%= f.label :（セイ）, class: "col-form-label" %>
  <%= f.text_field :first_kana, autocomplete: "first_kana", class: "col-md-2 form-control" %>
  <%= f.label :（メイ）, class: "col-form-label" %>
  <%= f.text_field :last_kana, autocomplete: "last_kana", class: "col-md-2 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :郵便番号, class: "col-md-2 col-form-label" %>
  <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "ハイフンなし", class: "col-md-2 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :住所, class: "col-md-2 col-form-label" %>
  <%= f.text_field :address, autocomplete: "address", class: "col-md-6 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :電話番号, class: "col-md-2 col-form-label" %>
  <%= f.text_field :phone, autocomplete: "phone", placeholder: "ハイフンなし", class: "col-md-3 form-control" %>
</div>

<div class="form-group row">
  <%= f.label :メールアドレス, class: "col-md-2 col-form-label" %>
  <%= f.email_field :email, autocomplete: "email", class: "col-md-3 form-control" %>
</div>
