<% @page_title = "商品一覧" %>

<%= search_form_for @q, url: searches_items_path, class:"d-flex" do |f| %>
  <%= f.search_field :title_cont, placeholder: "商品名、アーティスト名", class: "form-control" %>
  <%= submit_tag "検索", class: "btn btn-success" %>
<% end %>

<% if request.path != '/' %>
  <div>検索結果：<%= @items.count %>件</div>
<% end %>

<div class="card-deck">
  <% @items.each do |item| %>
    <%= link_to item_path(item), style:"text-decoration: none" do %>
    <!-- styleはリンクの下線を消すため -->
      <div class="card item-card mt-5">
        <%= image_tag "logo", size: "253x200" %>
        <div class="card-body">
          <h4 class="card-title border-bottom"><%= item.title %></h4>
          <p class="card-text">
            <!-- リレーションしていないと表示できないやーつ -->
            <%= item.artist.name %>
          </p>
          <p class="card-text">
            <%= item.price.to_s(:delimited) %>円
          </p>
          <p class="card-text">
            <small class="text-muted">
              <% if item.stock != 0 %>
                残り<%= item.stock %>個
              <% else %>
                売り切れ
              <% end %>
            </small>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
