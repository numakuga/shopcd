<h2 class="font-weight-bold border-bottom pb-2 mb-5">新規登録</h2>

<div class="row">
  <div class="col-md-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= render partial: 'users/shared/user_info_form', locals: {f: f} %>

      <div class="form-group row">
        <%= f.label :パスワード, class: "col-md-2 col-form-label" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上", class: "col-md-3 form-control" %>
      </div>

      <div class="form-group row">
        <%= f.label :パスワード（確認）, class: "col-md-2 col-form-label"%>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-3 form-control" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "アカウント作成", class: "btn btn-outline-info btn-lg col-md-5" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
